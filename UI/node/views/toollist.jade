doctype html
html
  head
    meta(charset='UTF-8')
    |   
    title Rudra Tool List
    |     
    link(rel='stylesheet', href='/css/style.css', media='screen', type='text/css')
  body
    .main
      #runtool
        h3 
          a(href="/home/") Home 
          a(href="/summary/") Summary 
          a(href="/report/") Report 
          a(href="/tools/") Tools 
          a(href="/settings/") Settings 
          a(href="/logout/#{csrf}") Logout
        |     
        fieldset
          center
            span Tool List
            br
            br
           table
              each item in tools
               tr
                td
                  a(href="/gettoolinfo/#{client}/#{item}") #{item}
                td 
                  input(type="checkbox", name='scanid', value='#{client}/#{item}')

           a(href="/gettoolinfo/#{client}/#{item}") #{item} &nbsp;&nbsp; &nbsp; &nbsp;
           input(type='submit', value='Delete Tools')    
           a(href="/deleteclienttool/#{client}/#{item}")  
           br
      // end login-form
 
